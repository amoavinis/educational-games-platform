rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global debug rule - allow all operations temporarily - updated
    match /{document=**} {
      allow read, write: if true;
    }
    // Role checking functions
    function isAdmin() {
      return request.auth.token.role == 1;
    }
    
    function isSchoolUser() {
      return request.auth.token.role == 2;
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function belongsToUsersSchool() {
      return resource.data.schoolId == request.auth.token.schoolId;
    }
    
    function belongsToUsersSchoolInRequest() {
      return request.resource.data.schoolId == request.auth.token.schoolId;
    }

    match /students/{studentId} {
      // CREATE rules
      allow create: if isAuthenticated() && (
                      isAdmin() || 
                      (isSchoolUser() && belongsToUsersSchoolInRequest())
                    );

      // UPDATE rules
      allow update: if isAuthenticated() && (
                     isAdmin() ||
                     (isSchoolUser() && 
                      belongsToUsersSchool() &&
                      belongsToUsersSchoolInRequest())
                   );

      // READ rules
      allow get: if isAuthenticated() && (
                   isAdmin() ||
                   (isSchoolUser() && belongsToUsersSchool())
                 );
                 
      allow list: if isAuthenticated() && (
                    isAdmin() ||
                    (isSchoolUser() && request.auth.token.schoolId != null)
                  );

      // DELETE rules
      allow delete: if isAuthenticated() && (
                      isAdmin() ||
                      (isSchoolUser() && belongsToUsersSchool())
                    );
    }

    match /schools/{schoolId} {
      allow create, update, delete: if isAuthenticated() && isAdmin();
      allow read: if isAuthenticated() && (
                     isAdmin() || 
                     schoolId == request.auth.token.schoolId
                   );
    }
    
    match /classes/{classId} {
      // Same pattern as students
      allow create: if isAuthenticated() && (
                      isAdmin() || 
                      (isSchoolUser() && belongsToUsersSchoolInRequest())
                    );

      allow update: if isAuthenticated() && (
                     isAdmin() ||
                     (isSchoolUser() && 
                      belongsToUsersSchool() &&
                      belongsToUsersSchoolInRequest())
                   );

      allow get: if isAuthenticated() && (
                   isAdmin() ||
                   (isSchoolUser() && belongsToUsersSchool())
                 );
                 
      allow list: if isAuthenticated() && (
                    isAdmin() ||
                    (isSchoolUser() && request.auth.token.schoolId != null)
                  );
                       
      allow delete: if isAuthenticated() && (
                      isAdmin() ||
                      (isSchoolUser() && belongsToUsersSchool())
                    );
    }
    
    match /reports/{reportId} {
      // Temporarily allow all operations for debugging
      allow read, write: if true;

      // Reports can be updated by authenticated users
      allow update: if isAuthenticated() && (
                     isAdmin() ||
                     isSchoolUser()
                   );

      // Reports can be read by authenticated users
      allow get: if isAuthenticated() && (
                   isAdmin() ||
                   isSchoolUser()
                 );
                 
      allow list: if isAuthenticated() && (
                    isAdmin() ||
                    isSchoolUser()
                  );

      // Reports can be deleted by authenticated users
      allow delete: if isAuthenticated() && (
                      isAdmin() ||
                      isSchoolUser()
                    );
    }
  }
}